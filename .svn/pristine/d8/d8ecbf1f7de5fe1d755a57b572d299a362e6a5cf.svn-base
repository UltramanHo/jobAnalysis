body {
    background-size: cover;
    background-image:url(../images/login_bg_0.jpg);
}

.signin {
	width:477px;
	height:479px;
	background:url(../images/login_bg.png) no-repeat;
	margin:0 auto;
	
	position:absolute;
	top:50%;
	left:50%;
	margin-top:-239px;
	margin-left:-238px;
}
.form-signin {
    max-width: 330px;
    padding: 43px 15px 15px 15px;
    margin: 0 auto;
}

.form-signin-heading{
    margin-bottom: 14px;
    font-family: "宋体";
    color: #000000;
    text-align: center;

}

.form-signin .checkbox {
    position: relative;
    margin-bottom: 10px;
}
.form-signin .checkbox {
    font-weight: normal;
        color: #000000;
    padding-left: 20px;
}

.form-signin .form-control{
    position: relative;
    font-size: 16px;
    height: auto;
    padding: 10px;
    -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
            box-sizing: border-box;
}
.form-signin .form-control:focus {
    z-index: 2;
}
.form-signin input[type="text"] {
    margin-bottom: 14px;
    border-radius:6px;
        -webkit-border-radius: 6px;
    background: url(../images/login_user.png) 0 0 #FFFFFF no-repeat;
    padding-left:60px;
}
.form-signin input[type="password"] {
    margin-bottom: 14px;
    border-radius:6px;
        -webkit-border-radius: 6px;
    background: url(../images/login_pas.png) 0 0 #FFFFFF no-repeat;
    padding-left:60px;
}
.form-signin button {
    margin-bottom: 14px;
    border-radius:6px;
        -webkit-border-radius: 6px;
    border-color: #e2e2e2;
    background: white;
    color: #000000 ;
}
