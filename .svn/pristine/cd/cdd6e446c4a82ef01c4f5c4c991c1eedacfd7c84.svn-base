body {
	padding-top: 40px;
	padding-bottom: 40px;
	text-align: center;
	font-family: 'PT Sans', Helvetica, Arial, sans-serif;
	color: #555;
	font-size: 16px;
	font-weight: 400;
	background-color: #444;
}
.green {
	color: #42EB4B;
}
.red {
	color: #eb4141;
}
strong {
	font-weight: 700;
}
.loginA-container {
	margin: 50px auto 0 auto;
	width: 400px;
}
/* ----- Login Form ----- */
.loginA form {
	padding: 20px 50px 40px 50px;
	background: #f8f8f8 left top repeat;
	-moz-border-radius: 8px;
	-webkit-border-radius: 8px;
	border-radius: 8px;
	-moz-box-shadow: 0 1px 5px 0 rgba(0,0,0,.3);
	-webkit-box-shadow: 0 1px 5px 0 rgba(0,0,0,.3);
	box-shadow: 0 1px 5px 0 rgba(0,0,0,.3);
	text-align: center;
}
.loginA form input {
	width: 95%;
	height: 30px;
	background: #fcfcfc;
	border: 1px solid #ddd;
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
	border-radius: 2px;
	-moz-box-shadow: 0 1px 3px 0 rgba(0,0,0,.1) inset;
	-webkit-box-shadow: 0 1px 3px 0 rgba(0,0,0,.1) inset;
	box-shadow: 0 1px 3px 0 rgba(0,0,0,.1) inset;
	font-family: 'PT Sans', Helvetica, Arial, sans-serif;
	color: #888;
	font-size: 16px;
}
.loginA form input:focus {
	border: 1px solid #ccc;
	-moz-box-shadow: none;
	-webkit-box-shadow: none;
	box-shadow: none;
}
.loginA form label {
	margin: 7px 0 10px 5px;
	font-size: 16px;
	text-align: left;
	float:left;
}
.loginA form label span {
	font-style: italic;
}
.loginA form input:-moz-placeholder {
color: #aaa;
}
.loginA form input:-ms-input-placeholder {
color: #aaa;
}
.loginA form input::-webkit-input-placeholder {
color: #aaa;
}	
.loginA form checkbox {
        margin-bottom: 10px;

}
.loginA form button {
	cursor: pointer;
	width: 60%;
	height: 42px;
	margin-top: 0px;
	margin-top: 25px;
	background: #42EB4B;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
	border: 0;
	-moz-box-shadow: 0 15px 30px 0 rgba(255,255,255,.1) inset;
	-webkit-box-shadow: 0 15px 30px 0 rgba(255,255,255,.1) inset;
	box-shadow: 0 15px 30px 0 rgba(255,255,255,.1) inset;
	font-family: 'PT Sans', Helvetica, Arial, sans-serif;
	font-size: 16px;
	font-weight: 400;
	color: #fff;
	text-shadow: 0 1px 2px rgba(0,0,0,.1);
	-o-transition: all .2s;
	-moz-transition: all .2s;
	-webkit-transition: all .2s;
	-ms-transition: all .2s;
}
.loginA form button:hover {
	-moz-box-shadow: 0 -15px 30px 0 rgba(255,255,255,.05) inset;
	-webkit-box-shadow: 0 -15px 30px 0 rgba(255,255,255,.05) inset;
	box-shadow: 0 -15px 30px 0 rgba(255,255,255,.05) inset;
}
.loginA form button:active {
	-moz-box-shadow: 0 -15px 30px 0 rgba(255,255,255,.05) inset,  0 5px 8px 0 rgba(0,0,0,.1) inset;
	-webkit-box-shadow: 0 -15px 30px 0 rgba(255,255,255,.05) inset,  0 5px 8px 0 rgba(0,0,0,.1) inset;
	box-shadow: 0 -15px 30px 0 rgba(255,255,255,.05) inset,  0 5px 8px 0 rgba(0,0,0,.1) inset;
}

.loginA form forget-password {
  margin-top: 25px;
}

.loginA form create-account {
  border-top: 1px dotted #eee;
  padding-top: 10px;
  margin-top: 15px;
}
/* ----- Media queries ----- */

@media (max-width: 1200px) {
.loginA form h2 {
	background: url(../img/pencil.png) 20px 6px no-repeat;
}
}

@media (min-width: 768px) and (max-width: 979px) {
.loginA form h2 {
	background: none;
}
}

@media (max-width: 767px) {
body {
	padding-left: 0;
	padding-right: 0;
}
.links {
	padding-bottom: 5px;
}
.logo h1 {
	padding-left: 0;
}
.loginA-container {
	padding-left: 20px;
	padding-right: 20px;
}
.loginA form h2 {
	background: none;
}
}

@media (max-width: 480px) {
.loginA form button {
	width: 97%;
}
}
